<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"/>

        <com.seven.lib_common.stextview.TypeFaceView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cube"
            android:textSize="@dimen/sp_16"
            app:SFontStyle="bold_s"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_32"/>

        <com.seven.lib_common.stextview.TypeFaceView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_light"
            android:textSize="@dimen/sp_14"
            app:SFontStyle="regular_s"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_32"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/line_iv"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_between"/>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.seven.lib_common.stextview.TypeFaceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/grey_light"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="regular_s"
                    android:text="@string/dialog_home"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_between"/>

            <RelativeLayout
                android:id="@+id/sure_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.seven.lib_common.stextview.TypeFaceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="regular_s"
                    android:text="@string/dialog_details"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>