<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f4"
    android:orientation="vertical">


    //领取报单奖励界面布局


    <android.support.v7.widget.RecyclerView
        android:id="@+id/me_receiveawards_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fafafa"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/me_receiveaward_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:button="@drawable/me_unselect"
                android:text="全选"
                android:textColor="#757575" />

            <com.seven.lib_common.stextview.TypeFaceView
                android:id="@+id/me_receiveaward_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:text="已选：4个"
                android:textColor="@color/primary"
                android:textSize="14sp"
                app:SFontStyle="bold_s" />
        </RelativeLayout>

        <com.seven.lib_common.stextview.TypeFaceView
            android:id="@+id/me_receiveaward_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/me_buy_bd_gobuybg"
            android:gravity="center"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:text="立刻领取"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:SFontStyle="bold_s" />
    </LinearLayout>
</LinearLayout>