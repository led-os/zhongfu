<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f4"
    android:orientation="vertical">


    //推广升级界面布局

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/me_upgrade"
        android:orientation="vertical">

        <com.seven.lib_common.stextview.TypeFaceView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:text="@string/me_upgrade"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:SFontStyle="bold_s" />

        <com.seven.lib_common.stextview.TypeFaceView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="- 邀请码 -"
            android:textColor="#136ee8"
            android:textSize="@dimen/sp_14"
            app:SFontStyle="bold_s" />


        <com.seven.lib_common.stextview.TypeFaceView
            android:id="@+id/me_upgrade_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="2873-9302-8391"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            app:SFontStyle="bold_s" />
    </LinearLayout>

    <com.seven.lib_common.stextview.TypeFaceView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="升级规则"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        app:SFontStyle="bold_s" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.seven.lib_common.stextview.TypeFaceView
            android:id="@+id/me_upgrade_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="22dp"
            android:textColor="#1e1d1d"
            android:textSize="@dimen/sp_14"
            app:SFontStyle="bold_s" />
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>