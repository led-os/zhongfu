<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/impression">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/buy_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="btClick">

                    <com.seven.lib_common.stextview.TypeFaceView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/button_release_sale"
                        android:textColor="@color/demand_tab"
                        android:textSize="@dimen/sp_14"
                        app:SFontStyle="regular_s" />

                    <ImageView
                        android:id="@+id/buy_iv"
                        android:layout_width="35dp"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/primary" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sell_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="btClick">

                    <com.seven.lib_common.stextview.TypeFaceView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/button_release_buy"
                        android:textColor="@color/demand_tab"
                        android:textSize="@dimen/sp_14"
                        app:SFontStyle="regular_s" />

                    <ImageView
                        android:id="@+id/sell_iv"
                        android:layout_width="35dp"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/primary" />

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/impression" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/demand_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <com.seven.lib_common.stextview.TypeFaceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_token_number"
                    android:textColor="@color/demand_tab"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="regular_s" />

                <com.seven.lib_common.stextview.TypeFaceEdit
                    android:id="@+id/token_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="@string/hint_token_number_1"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/cube"
                    android:textColorHint="@color/grey_light"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone"
                    app:SFontStyle="light_s"
                    app:SGravityRight="true" />

                <com.seven.lib_common.stextview.TypeFaceEdit
                    android:id="@+id/buy_token_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="@string/hint_token_number_2"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/cube"
                    android:textColorHint="@color/grey_light"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone"
                    app:SFontStyle="light_s"
                    app:SGravityRight="true" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/impression" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/demand_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <com.seven.lib_common.stextview.TypeFaceView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_sale_price"
                    android:textColor="@color/demand_tab"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="regular_s" />

                <com.seven.lib_common.stextview.TypeFaceEdit
                    android:id="@+id/price_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="@string/hint_sale_price"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/cube"
                    android:textColorHint="@color/grey_light"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone"
                    app:SFontStyle="light_s"
                    app:SGravityRight="true" />


                <com.seven.lib_common.stextview.TypeFaceEdit
                    android:id="@+id/buy_price_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="@string/hint_buy_price"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/cube"
                    android:textColorHint="@color/grey_light"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone"
                    app:SFontStyle="light_s"
                    app:SGravityRight="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sell_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/demand_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <com.seven.lib_common.stextview.TypeFaceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_receiving_account"
                    android:textColor="@color/demand_tab"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="regular_s" />

                <com.seven.lib_common.stextview.TypeFaceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_receiving_account"
                    android:textColor="@color/grey_light"
                    android:textSize="@dimen/sp_12"
                    app:SFontStyle="regular_s" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/impression" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/demand_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <com.seven.lib_common.stextview.TypeFaceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_alipay_account"
                    android:textColor="@color/demand_tab"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="regular_s" />

                <com.seven.lib_common.stextview.TypeFaceEdit
                    android:id="@+id/alipay_account_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="@string/hint_alipay_account"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/cube"
                    android:textColorHint="@color/grey_light"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="light_s"
                    app:SGravityRight="true" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/impression" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/demand_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <com.seven.lib_common.stextview.TypeFaceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_wechat_account"
                    android:textColor="@color/demand_tab"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="regular_s" />

                <com.seven.lib_common.stextview.TypeFaceEdit
                    android:id="@+id/wechat_account_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="@string/hint_wechat_account"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/cube"
                    android:textColorHint="@color/grey_light"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="light_s"
                    app:SGravityRight="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/demand_btn"
        style="@style/Button_Long"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:onClick="btClick">

        <com.seven.lib_common.stextview.TypeFaceView
            android:id="@+id/demand_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/button_release_sale"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/password_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/press"
        android:onClick="btClick"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/impression"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sheet_password"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sheet_password_r">

                <com.seven.lib_common.stextview.TypeFaceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/hint_pay_password"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/sp_14"
                    app:SFontStyle="medium_s" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_between" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.seven.lib_common.widget.password.GridPasswordView
                    android:id="@+id/password_tv"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>