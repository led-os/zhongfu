<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@android:color/white"
    android:padding="@dimen/margin_16">

    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/order_address_icon" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_toRightOf="@+id/goods_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="名称商品名称商品名称商品名称商名"
        android:textColor="#1e1d1d" />

    <TextView
        android:id="@+id/spec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_name"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_toRightOf="@+id/goods_img"
        android:paddingTop="@dimen/dp_4"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/goods_img"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_toRightOf="@+id/goods_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥180.00"
            android:textColor="#ff4c64"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="#303030"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>
