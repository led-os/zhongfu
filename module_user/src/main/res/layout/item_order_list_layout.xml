<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_16"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/padding_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号:2443136531354"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textColor="#146fe8"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_16">

        <ImageView
            android:id="@+id/goods_img"
            android:scaleType="centerInside"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_photo_icon" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:text="卡姿兰大眼睛卡姿兰大眼睛卡姿兰大眼睛卡姿兰大眼睛卡姿兰大"
            android:textColor="#1e1d1d" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥390.0"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/goods_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#abaeb3"
                android:gravity="end"
                android:text="x1" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_number_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#303030"
            android:textSize="@dimen/sp_14"
            android:text="共1件商品 " />

        <TextView
            android:id="@+id/order_money_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10"
            android:textSize="@dimen/sp_14"
            android:textColor="#303030"
            android:text="合计：￥390.0(免运费) " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_10">

        <TextView
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_box_bg"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/dp_4"
            android:text="取消订单"
            android:textColor="#abaeb3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/confirm_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_box_blue_bg"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/dp_4"
            android:text="确认收货"
            android:visibility="gone"
            android:textColor="#1470e8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:background="@drawable/round_box_blue_bg"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/dp_4"
            android:text="付款"
            android:textColor="#1470e8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/check_wl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_box_blue_bg"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:paddingTop="@dimen/dp_4"
            android:layout_marginLeft="4dp"
            android:text="查看物流"
            android:visibility="gone"
            android:textColor="#1470e8"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>