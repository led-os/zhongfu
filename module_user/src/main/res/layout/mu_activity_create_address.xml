<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16"
            android:text="收货人"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写收货人姓名"
            android:padding="@dimen/padding_16"
            android:textColor="#000000"
            android:textColorHint="#abaeb3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/padding_16"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_16"
            android:text="手机号码"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写收货人手机号码"
            android:inputType="phone"
            android:padding="@dimen/padding_16"
            android:textColor="#000000"
            android:textColorHint="#abaeb3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/padding_16"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16"
            android:text="收货地址"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请选择省市区"
            android:padding="@dimen/padding_16"
            android:textColor="#000000"
            android:textColorHint="#abaeb3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/padding_16"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16"
            android:text="详细地址"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/address_detail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@null"
            android:gravity="start"
            android:hint="请填写详细地址：街道、小区..."
            android:padding="@dimen/padding_16"
            android:textColor="#000000"
            android:textColorHint="#abaeb3"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/is_default_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16">

        <ImageView
            android:id="@+id/is_default_address_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_shopping_cart_default" />

        <TextView
            android:id="@+id/is_default_address_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/margin_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_16"
            android:text="设为默认地址"
            android:textColor="#7a7c80"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/padding_16"
        android:background="@drawable/round_gradual_bg"
        android:gravity="center"
        android:padding="@dimen/padding_8"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="14sp" />
</LinearLayout>